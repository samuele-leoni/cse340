<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %> <%- messages() %> <% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<form action="/account/register" method="post">
  <div class="form-data">
    <label for="accountFirstname">First Name:</label>
    <input
      id="accountFirstname"
      class="input-data"
      type="text"
      name="account_firstname"
      required
      value="<%= locals.account_firstname %>"
    >
  </div>
  <div class="form-data">
    <label for="accountLastname">Last Name:</label>
    <input
      class="input-data"
      id="accountLastname"
      type="text"
      name="account_lastname"
      required
      value="<%= locals.account_lastname %>"
    >
  </div>
  <div class="form-data">
    <label for="accountEmail">Email:</label>
    <input
      class="input-data"
      id="accountEmail"
      type="email"
      name="account_email"
      required
      value="<%= locals.account_email %>"
    >
  </div>
  <div class="form-data">
    <label for="accountPassword">Password:</label>
    <span id="passwordRequirements">
      Passwords must be at least 12 characters and contain at least 1 number, 1
      capital letter and 1 special character
    </span>
    <input
      class="input-data"
      type="password"
      name="account_password"
      id="accountPassword"
      required
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
      title="Passwords must be at least 12 characters and contain at least 1 number, 1
      capital letter and 1 special character"
    >
  </div>

  <input class="link" type="submit" value="Register" >
  <p>Already have an account? <a href="login">Log In</a></p>
</form>
