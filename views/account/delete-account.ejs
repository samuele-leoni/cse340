<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %> <%- messages() %> <% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<form method="post" action="/account/delete">
  <div class="form-data">
    <label for="accountPassword">Password:</label>
    <span id="passwordRequirements">
      Insert your password to delete your account
    </span>
    <input
      class="input-data"
      type="password"
      name="account_password"
      id="accountPassword"
      required
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
      title="Passwords must be at least 12 characters and contain at least 1 number, 1
              capital letter and 1 special character"
    >
  </div>
  <input class="link" type="submit" value="Delete Account" >
  <input type="hidden" name="account_id" <% if(locals.account_id) { %>
  value="<%= locals.account_id %>" <% } %>>
</form>

<script src="../../js/inv-update.js"></script>
