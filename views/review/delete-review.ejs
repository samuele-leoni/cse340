<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %> <%- messages() %> <%- review %>

<form class="second-form" action="/review/delete" method="post">
  <h2>Are you sure you want to delete this review?</h2>
  <input type="hidden" name="review_id" value="<%= locals.review_id %>" >
  <input type="hidden" name="account_id" value="<%= locals.accountData.account_id %>" >
  <input class="input-link" type="submit" value="Yes, delete this review" >
  <a class="link" href="/review/myreviews/<%= locals.accountData.account_id %>"
    >No, go back to my reviews</a
  >
</form>
